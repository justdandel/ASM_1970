@model Assignment.Models.Category

<div class="container text-center">
    <div class="row">
        <div class="col">
            <table class="table table-bordered">
                <tr>
                    <th colspan="1">Book List</th>
                    <th>TOTAL: @Model.BookList.Count</th>
                </tr>
                <tr>
                    <th>Book Name</th>
                    <th>Book image</th>
                </tr>
                @foreach (var b in Model.BookList)
                {
                    <tr>
                        <td>@b.Name</td>
                        <td>
                            <a asp-controller="Book" asp-action="Detail" asp-route-id="@b.Id">
                                <img src="@b.Img" width="80" height="80">
                            </a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>